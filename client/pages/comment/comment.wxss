/* pages/comment/comment.wxss */

/**
 * 商品卡片
 */

.item-card {
    display: flex;
    align-items: center;
    padding-left: 26rpx;
    height: 200rpx;
    background: #fff;
}

.item-image {
    flex-shrink: 0;
    width: 160rpx;
    height: 160rpx;
}

.item-info {
    flex: 1;
    padding: 27rpx;
    height: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 40rpx;
}

.item-title {
    color: rgba(29, 29, 38, 0.8);
}

.item-price {
    margin-top: 12rpx;
    font-weight: bold;
}

/**
 * 添加评论
 */

.comment-add {
    margin: 29rpx 27rpx 0;
    padding-bottom: 26rpx;
    background: #fff;
    box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
    border-radius: 10rpx;
}

.comment-input {
    width: 100%;
    height: 207rpx;
    padding: 29rpx 34rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 40rpx;
}

.comment-placeholder {
    color: rgba(29, 29, 38, 0.4);
}

.preview-cnt {
    display: flex;
    margin-top: 29rpx;
    margin-left: 29rpx;
}

.preview-image {
    margin-right: 10rpx;
    width: 180rpx;
    height: 180rpx;
    border-radius: 5rpx;
}

.opr-upload {
    display: block;
    margin-top: 29rpx;
    margin-left: 29rpx;
    width: 43rpx;
    height: 43rpx;
}

.comment-button {
    margin: 34rpx auto;
    width: 250rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #f5e069;
    border-radius: 10rpx;
    font-size: 30rpx;
    color: #34373d;
}

.comment-button.dis {
    color: rgba(52, 55, 61, 0.5);
}

/**
 * 评论列表
 */

.comments {
    margin-top: 16rpx;
    background: #fff;
    box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
}

.comment-title {
    padding: 25rpx 26rpx 14rpx;
    font-size: 30rpx;
    line-height: 42rpx;
    color: rgba(29, 29, 38, 0.8);
    font-weight: bold;
}

.comment-card {
    display: flex;
    padding: 30rpx 23rpx 0 26rpx;
}

.comment-card:last-child .comment-main {
    border-bottom: none;
}

.comment-avatar {
    flex-shrink: 0;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.comment-main {
    flex: 1;
    margin-left: 24rpx;
    padding-bottom: 30rpx;
    border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.comment-meta {
    display: flex;
    font-size: 25rpx;
    line-height: 36rpx;
    color: rgba(29, 29, 38, 0.5);
}

.comment-username {
    flex: 1;
}

.comment-content {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #1d1d26;
}

.preview-list {
    display: flex;
    margin-top: 16rpx;
}

.preview-item {
    margin-right: 10rpx;
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
}
